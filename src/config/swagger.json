{
    "openapi": "3.0.0",
    "info": {
        "title": "API Doadores de sangue",
        "description": "Essa API é um sistema de gerenciamento de doações de sangue, com quatro componentes principais: Doador, Doação, Estoque de Sangue e Funcionário. Ela permite a manipulação de informações e facilita o controle e a organização do processo de doação de sangue.",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3000",
            "description": "Api de teste"
        }
    ],
    "tags": [
        {
            "name": "Login",
            "description": "Endpoints relacionados ao login"
        },
        {
            "name": "Funcionário",
            "description": "Endpoints relacionados ao funcionário"
        },
        {
            "name": "Doador",
            "description": "Endpoints relacionados ao doador"
        },
        {
            "name": "Doação",
            "description": "Endpoints relacionados a doação"
        },
        {
            "name": "Estoque de Sangue",
            "description": "Endpoints relacionados ao estoque de sangue"
        }
    ],
    "paths": {
        "/login": {
            "post": {
                "tags": [
                    "Login"
                ],
                "summary": "Login",
                "description": "Realiza o login do funcionário **(apenas funcionários cadastrados)**",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Login"
                            },
                            "examples": {
                                "Admin": {
                                    "value": {
                                        "employeeCode": 877018,
                                        "password": "1234teste"
                                    }
                                },
                                "Santiago - funcionário": {
                                    "value": {
                                        "employeeCode": 458304,
                                        "password": "12345678"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Login"
                                },
                                "examples": {
                                    "ServerResponse": {
                                        "value": {
                                            "message": "Login realizado com sucesso"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "examples": {
                                    "InvalidEmployeeCode": {
                                        "value": {
                                            "error": "O código fornecido não pertence a nenhum funcionário."
                                        }
                                    },
                                    "InvalidPassword": {
                                        "value": {
                                            "error": "Senha inválida."
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                },
                                "examples": {
                                    "ServerError": {
                                        "value": {
                                            "error": "Ocorreu um erro ao realizar o login. Por favor, tente novamente."
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/employee": {
            "post": {
                "tags": [
                    "Funcionário"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "summary": "Cria um novo funcionário",
                "description": "Cria um novo funcionário com os dados fornecidos. A senha deve ter pelo menos 8 caracteres. **O código do funcionário é gerado automaticamente.**",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Employee"
                            },
                            "examples": {
                                "Admin": {
                                    "value": {
                                        "name": "Admin",
                                        "password": "1234teste",
                                        "isAmind": true
                                    }
                                },
                                "Funcionário": {
                                    "value": {
                                        "name": "Santiago",
                                        "password": "12345678"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                },
                                "examples": {
                                    "Unauthorized": {
                                        "value": {
                                            "error": "Acesso negado."
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "201": {
                        "description": "Created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Employee"
                                },
                                "examples": {
                                    "ServerResponse": {
                                        "value": {
                                            "message": "Funcionário registrado com sucesso"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                },
                                "examples": {
                                    "InvalidPassword": {
                                        "value": {
                                            "error": "A senha deve ter pelo menos 8 caracteres."
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                },
                                "examples": {
                                    "ServerError": {
                                        "value": {
                                            "error": "Ocorreu um erro ao registrar o funcionário. Por favor, tente novamente."
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/employees": {
            "get": {
                "tags": [
                    "Funcionário"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "summary": "Listar todos os funcionários",
                "description": "Retorna uma lista com todos os funcionários cadastrados.",
                "responses": {
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                },
                                "examples": {
                                    "Unauthorized": {
                                        "value": {
                                            "error": "Acesso negado."
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Employee"
                                },
                                "examples": {
                                    "ServerResponse": {
                                        "value": [
                                            {
                                                "_id": "6531c14e0637c533de11d475",
                                                "name": "Admin",
                                                "employeeCode": 877018,
                                                "password": "$2b$10$GvFJCv3aaAjsAJxZKWb1yey4Bg2e9Ms./FjAUXOPbTd9svp3upbue",
                                                "isAdmin": true
                                            },
                                            {
                                                "_id": "65381849a9aa46ed78bf13cf",
                                                "name": "Santiago",
                                                "employeeCode": 458304,
                                                "password": "$2b$10$vnzxE22oyrhoeMJEipOhhekV.RWxXHT.Rcy.aOi2aIM4YkQ7myAYa",
                                                "isAdmin": false
                                            },
                                            {
                                                "_id": "653ff16e78153105a75e40ee",
                                                "name": "Carlos",
                                                "employeeCode": 407755,
                                                "password": "$2b$10$qS0BDX95zAQBGJA55AK5dOVIuMu.Z1tqYW.wNv.FF44vnbwvA0vMK",
                                                "isAdmin": false
                                            }
                                        ]
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                },
                                "examples": {
                                    "EmployeeNotFound": {
                                        "value": {
                                            "error": "Funcionário não encontrado."
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                },
                                "examples": {
                                    "ServerError": {
                                        "value": {
                                            "error": "Ocorreu um erro ao listar os funcionários. Por favor, tente novamente."
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/employees/{employeeCode}": {
            "get": {
                "tags": [
                    "Funcionário"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "summary": "Buscar um funcionário",
                "description": "Retorna os dados do funcionário com o código fornecido.",
                "parameters": [
                    {
                        "name": "employeeCode",
                        "description": "Código do funcionário",
                        "required": true,
                        "in": "path",
                        "schema": {
                            "type": "number"
                        }
                    }
                ],
                "responses": {
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                },
                                "examples": {
                                    "Unauthorized": {
                                        "value": {
                                            "error": "Acesso negado."
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Employee"
                                },
                                "examples": {
                                    "ServerResponse": {
                                        "value": {
                                            "_id": "65381849a9aa46ed78bf13cf",
                                            "name": "Santiago",
                                            "employeeCode": 458304,
                                            "password": "$2b$10$vnzxE22oyrhoeMJEipOhhekV.RWxXHT.Rcy.aOi2aIM4YkQ7myAYa",
                                            "isAdmin": false
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                },
                                "examples": {
                                    "EmployeeNotFound": {
                                        "value": {
                                            "error": "Funcionário não encontrado."
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                },
                                "examples": {
                                    "ServerError": {
                                        "value": {
                                            "error": "Ocorreu um erro ao buscar o funcionário. Por favor, tente novamente."
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Login": {
                "type": "object",
                "properties": {
                    "employeeCode": {
                        "type": "number"
                    },
                    "password": {
                        "type": "string"
                    }
                }
            },
            "Employee": {
                "type": "object",
                "properties": {
                    "_id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string",
                        "required": true,
                        "not": null,
                        "unique": true
                    },
                    "employeeCode": {
                        "type": "number",
                        "required": true,
                        "not": null
                    },
                    "password": {
                        "type": "string",
                        "required": true,
                        "not": null
                    },
                    "isAdmin": {
                        "type": "boolean",
                        "default": false
                    }
                }
            },
            "Error": {
                "type": "object",
                "properties": {
                    "error": {
                        "type": "string"
                    }
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }
}